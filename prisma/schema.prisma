generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  Developer
  Admin
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String  @unique
  name           String
  hashPassword   String?
  duties         String?
  yearsOnCrew    String?
  favoriteMemory String?
  birthday       String?
  imgUrl         String?
  role           Role     @default(Admin)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  pictures Picture[]
}

enum Category {
  Home
  Away
}

enum Season {
  Season2015
  Season2016
  Season2017
  Season2018
  Season2019
  Season2020
  Season2021
  Season2022
  Season2023
  Season2024
  Season2025
}

model Picture {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  userId    String   @db.ObjectId
  category  Category
  season    Season
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model FAQ {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  city String
  logo String

  games Game[] @relation("OpponentTeam")
}

enum Location {
  Home
  Away
}

model Game {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  date       DateTime
  location   Location
  opponentId String   @db.ObjectId
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  opponent Team @relation("OpponentTeam", fields: [opponentId], references: [id])
}
